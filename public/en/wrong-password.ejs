<article class="b-article b-wrong-password-article">
	<h2 class="b-article-title">Некорректный пароль</h2>
	<form action="#" class="b-form">
		<fieldset class="b-form-fieldset">
			<label for="author-form-passw" class="b-form-fieldset-title">Введите пароль</label>
			<div class="b-form-field">
				<input type="password" class="b-form-field-entity" id="author-form-passw" placeholder="Введите пароль">
			</div>
		</fieldset>
		<fieldset class="b-form-fieldset">
			<a <%- partial("_href", {page : pages.main}) %> class="b-button" title="Подтвердить данные">
				<span class="b-button-inside">Подтвердить данные</span>
			</a>
			<span class="b-form-pass-section" >
				<a class="b-form-pass-section-link" title="Получить пароль еще раз" href="#">Получить пароль еще раз</a>
			</span>
		</fieldset>
	</form>
</article>